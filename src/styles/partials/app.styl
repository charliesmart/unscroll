.focus__screen 
  position fixed
  width 100vw
  height 100vh
  background-color $lightGray
  z-index 999999999
  top 0
  left 0
  
  &__contents
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
  
  &__header
    font-family $sans
    color $darkGray
    max-width 500px
    margin auto

  .prompt
    pointer-events none
    //background-color white
    font-family $sans
    color $darkGray
    margin auto
    padding 15px
    border-radius 5px
    font-size 34px
    max-width 500px
    line-height 44px
    //box-shadow 0 10px 20px rgba(#3E4B62,0.09), 0 6px 6px rgba(#3E4B62,0.13)
    margin-bottom 15px
    user-select none
    
    span
      pointer-events none

    .correct
      opacity 0.4
      
    .incorrect
      color #ff5959
      text-shadow rgb(244, 245, 250) 0px 0px, rgb(244, 245, 250) 0px -0px, rgb(244, 245, 250) 3px 1.5px, rgb(244, 245, 250) -3px 1.5px
      background-size 1px 1em
      box-shadow rgb(244, 245, 250) 0px -2.5px inset, rgb(255, 89, 89) 0px -5px inset
      display inline

  button
    border none
    box-shadow 0 10px 20px rgba(#3E4B62,0.09), 0 6px 6px rgba(#3E4B62,0.13)
    color $lightGray
    background-color #6174F9
    padding 15px
    border-radius 5px
    display block
    margin auto
    font-size 16px
    margin-top 20px
    opacity 0.4
    pointer-events none
    cursor not-allowed
    transition all 0.3s ease

    &.active
      opacity 1
      pointer-events all
      cursor pointer
      
    &:focus, &:hover
      outline none
      box-shadow 0 25px 20px rgba(#3E4B62,0.12), 0 12px 12px rgba(#3E4B62,0.19)

  textarea
    background-color white
    resize none
    font-family $sans
    color $darkGray
    margin auto
    padding 15px
    display block
    border-radius 5px
    font-size 34px
    width 500px
    height 100px
    box-shadow 0 10px 20px rgba(#3E4B62,0.09), 0 6px 6px rgba(#3E4B62,0.13)
    border 2px solid transparent
    transition all 0.2s ease
    
    &:focus
      outline none
      border 2px solid #6174F9